<div class="right_col" role="main">
    <!-- top tiles -->
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Math Olympiad<small>Team List</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <% let success='Team data has been deleted successfully!' %>
                <% let success2='Team payment completed succesfully!' %>
                <% let success3='Team has been selected succesfully!' %>
                <% if (error.length>0) {if((error==success) || (error==success2) || (error==success3)){%>
                <div class="alert alert-success"><%=error%></div>
                <%}else{%>
                <div class="alert alert-danger"><%=error%></div>
                <%}%> <%}%>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable-responsive" class="table table-striped table-bordered nowrap"
                                cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Team<br />Name</th>
                                        <th>Institution</th>
                                        <th>Coach<br />Name</th>
                                        <th>Coach<br />Contact</th>
                                        <th>Coach<br />Mail</th>
                                        <th>Coach<br />T-Shirt</th>
                                        <th>Leader<br />Name</th>
                                        <th>Leader<br />Contact</th>
                                        <th>Leader<br />Mail</th>
                                        <th>Leader<br />T-Shirt</th>
                                        <th>Member 1<br />Name</th>
                                        <th>Member 1<br />Contact</th>
                                        <th>Member 1<br />Mail</th>
                                        <th>Member 1<br />T-Shirt</th>
                                        <th>Member 2<br />Name</th>
                                        <th>Member 2<br />Contact</th>
                                        <th>Member 2<br />Mail</th>
                                        <th>Member 2<br />T-Shirt</th>
                                        <th>Total</th>
                                        <th>Paid</th>
                                        <th>Selected</th>
                                        <th>Payment<br />Status</th>
                                        <th>Select</th>
                                        <th>Payment<br />Done</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(teams.length>0){
                                        teams.forEach(team=>{%>
                                        <tr>
                                            <td>
                                                <%=team.teamname%>
                                            </td>
                                            <td>
                                                <%=team.institution%>
                                            </td>
                                            <td>
                                                <%=team.coachname%>
                                            </td>
                                            <td>
                                                <%=team.coachcontact%>
                                            </td>
                                            <td>
                                                <%=team.coachmail%>
                                            </td>
                                            <td>
                                                <%=team.coachtshirt%>
                                            </td>
                                            <td>
                                                <%=team.leadername%>
                                            </td>
                                            <td>
                                                <%=team.leadercontact%>
                                            </td>
                                            <td>
                                                <%=team.leadermail%>
                                            </td>
                                            <td>
                                                <%=team.leadertshirt%>
                                            </td>
                                            <td>
                                                <%=team.member1name%>
                                            </td>
                                            <td>
                                                <%=team.member1contact%>
                                            </td>
                                            <td>
                                                <%=team.member1mail%>
                                            </td>
                                            <td>
                                                <%=team.member1tshirt%>
                                            </td>
                                            <td>
                                                <%=team.member2name%>
                                            </td>
                                            <td>
                                                <%=team.member2contact%>
                                            </td>
                                            <td>
                                                <%=team.member2mail%>
                                            </td>
                                            <td>
                                                <%=team.member2tshirt%>
                                            </td>
                                            <td>
                                                <%=team.total%>
                                            </td>
                                            <td>
                                                <%=team.paid%>
                                            </td>
                                            <td>
                                                <%if(team.selected==true){%>
                                                    <p style="color: green">Yes</p>
                                                    <%}else{%>
                                                        <p style="color: red">No</p>
                                                        <%}%>
                                            </td>
                                            <td>
                                                <%if(team.paid==team.total){%>
                                                    <p style="color: green">Successful</p>
                                                    <%}else{%>
                                                        <p style="color: red">Incomplete</p>
                                                        <%}%>
                                            </td>
                                            <td>
                                                <% const selectURL='select/' + team._id %>
                                                    <a href="<%= selectURL %>"><i class="fa fa-check"></i><span class="fa fa-chevron"></span></a>
                                            </td>
                                            <td>
                                                <% const paymentDoneURL='paymentDone/' + team._id %>
                                                    <a href="<%= paymentDoneURL %>"><i class="fa fa-money"></i><span class="fa fa-chevron"></span></a>
                                            </td>
                                            <td>
                                                <% const editURL='editTeam/' +team._id %>
                                                    <a href="<%= editURL%>"><i class="fa fa-pencil"></i><span class="fa fa-chevron"></span></a>
                                            </td>

                                            <td>
                                                <% const deleteURL='delete/' + team._id %>
                                                    <a href="<%= deleteURL%>"><i class="fa fa-trash"></i><span class="fa fa-chevron"></span></a>
                                            </td>
                                        </tr>
                                        <% }) }%>
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>